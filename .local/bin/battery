#!/bin/sh

# Dependencies: a laptop running on Linux

capacity=$(cat "/sys/class/power_supply/BAT1/capacity")
bat_stat=$(cat "/sys/class/power_supply/BAT1/status")

[ "$bat_stat" == "Charging" ] && status="" #|| status=""

if [ "$bat_stat" != "Charging" ]; then
	case 1 in
		$(( $capacity <= 10 ))) status="󰁺" ;;
		$(( $capacity <= 20 ))) status="󰁻" ;;
		$(( $capacity <= 30 ))) status="󰁼" ;;
		$(( $capacity <= 40 ))) status="󰁽" ;;
		$(( $capacity <= 50 ))) status="󰁾" ;;
		$(( $capacity <= 60 ))) status="󰁿" ;;
		$(( $capacity <= 70 ))) status="󰂀" ;;
		$(( $capacity <= 80 ))) status="󰂁" ;;
		$(( $capacity <= 90 ))) status="󰂂" ;;
		$(( $capacity <= 100 ))) status="󰁹" ;;
	# case 1 in 
	# 	$(( $capacity <= 25 ))) status=" ";;
	# 	$(( $capacity <= 50 ))) status="" ;;
	# 	$(( $capacity <= 75 ))) status="" ;;
	# 	$(( $capacity <= 100 ))) status="" ;;
	esac
fi

case "$1" in
    'sbar') [ $capacity -lt 30 ] && [ "$bat_stat" != "Charging" ] && echo "^B1^^C0^ $status $capacity% ^d^" || echo "^B3^^C0^ $status $capacity% ^d^" ;;
    *) echo "$status" $capacity% ;;
esac

# [ $capacity -lt 30 ] && [ "$bat_stat" != "Charging" ] && echo "^B1^ $status $capacity%"
