#!/bin/sh

var=$(mpc | awk 'NR==2{print $1;}') && ctl="mpc"
title=no_title
title=$title$(mpc --format '%title%' current)
glyph()
{
	[[ "$var" == *laying* ]] && GLYPH="" || GLYPH=""
}
glyph
[[ $1 == 'sbar' && $(mpc current) != '' ]] && echo "^B1^^c#1d2225^ $GLYPH $(mpc current) ^b#1d2225^^c#1d2225^" 
[[ $(mpc current) == '' ]] && echo " " || echo " $GLYPH $(mpc current)"
