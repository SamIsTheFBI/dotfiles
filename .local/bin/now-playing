#!/bin/sh

var=$(mpc | awk 'NR==2{print $1;}') && ctl="mpc"
title=no_title
title=$title$(mpc --format '%title%' current)
glyph()
{
	[[ "$var" == *laying* ]] && GLYPH="" || GLYPH=""
}
glyph
[[ $(mpc current) == '' ]] && echo " " || [[ $1 == 'sbar' ]] && echo "^B1^^c#1d2225^ $GLYPH $(mpc current) ^b#1d2225^^c#1d2225^" || echo " $GLYPH $(mpc current)"
