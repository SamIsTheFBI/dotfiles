#!/bin/sh

if [ -z "$1" ];then
	maim --format png /dev/stdout | xclip -selection clipboard -t image/png -i
	notify-send '  Screenshot copied to clipboard'
elif [ "$1" == "fullsave" ];then
	var=~/Screenshots/Screenshot_$(date +%Y%m%d_%H%M%S).png
	maim $var 
	notify-send -i "$var" '  Screenshot saved'
elif [ "$1" == "selectcopy" ];then
	maim -s /dev/stdout | xclip -selection clipboard -t image/png -i
	notify-send '  Screen selection copied to clipboard'
elif [ "$1" == "selectsave" ];then
	var=~/Screenshots/ScreenSelect_$(date +%Y%m%d_%H%M%S).png
	maim -s $var
	notify-send -i "$var" '  Screen selection saved'
elif [ "$1" == "actwincopy" ];then
	maim -i $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
	notify-send '  Focused window screenshot copied to clipboard'
fi
